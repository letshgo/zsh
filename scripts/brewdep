#!/usr/bin/env zsh
BREW_PKGS=(
  aerc
  az
  bat bitwarden-cli btop
  cowsay
  eza
  fd figlet fzf
  git-crypt golang
  jq
  k9s kubectl
  lazygit lolcat
  most
  neovim newsboat nmap
  pyenv pyenv-virtualenv
  rustup
  skopeo
  tenv tmux tmuxp trivy
  volta weechat wego
  yq
  zig zoxide
)
if [[ ! ${1:-} == "update" ]]; then
  brew install $BREW_PKGS[@]
else
  brew update && brew upgrade
fi
